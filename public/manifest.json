{
  "name": "FaceFix",
  "version": "1.0",
  "description": "Webcam filters for popular video conference sites",
  "permissions": [
    "activeTab",
    "storage",
    "declarativeContent"
  ],
  "background": {
    "scripts": [
      "src/js/background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "src/images/get_started16.png",
      "32": "src/images/get_started32.png",
      "48": "src/images/get_started48.png",
      "128": "src/images/get_started128.png"
    }
  },
  "icons": {
    "16": "src/images/get_started16.png",
    "32": "src/images/get_started32.png",
    "48": "src/images/get_started48.png",
    "128": "src/images/get_started128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/test.html",
        "https://zoom.us/*",
        "https://web.skype.com/*",
        "https://whereby.com/*",
        "https://app.houseparty.com/*"
      ],
      "run_at": "document_start",
      "all_frames": true,
      "js": [
        "src/js/contentscript.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "lib/*",
    "src/*/*"
  ],
  "manifest_version": 2
}